@{
	Layout = @"~/_layouts/_layout.cshtml";
	
	var baseUrl = "https://leekelleher.com";
	var date = Model.Get<DateTime>("date");
	var readingTime = Model.Get<ReadingTimeMeta>(ReadingTimeKeys.ReadingTime);
	var canonical = string.Concat(baseUrl, Model.String("canonical", "/"));
	
	Func<IDocument, object> getTags = (doc) =>
	{
		if (!doc.ContainsKey("tags"))
			return null;
			
		var tags = doc.Get<string[]>("tags");
		var items = new List<string>();

		foreach (var tag in tags)
		{
			items.Add(string.Format("<a href=\"/tag/{1}/\" rel=\"tag\" class=\"p-category\">{0}</a>", tag, MyHelper.CleanTag(tag)));
		}

		return Html.Raw(string.Join(", ", items));
	};
	
	var posting = new Schema.NET.BlogPosting
	{
		MainEntityOfPage = new Uri(canonical),
		Headline = Model.String("title"),
		Url = new Uri(canonical),
		DateCreated = new DateTimeOffset(date),
		DateModified = new DateTimeOffset(date),
		DatePublished = new DateTimeOffset(date),
		Author = new Schema.NET.Person { Name = "Lee Kelleher", Url = new Uri(baseUrl) },
		Publisher = new Schema.NET.Person { Name = "Lee Kelleher", Url = new Uri(baseUrl) },
		Description = Model.String("Excerpt"),
		ArticleBody = MyHelper.StripHtml(Model.String("PostContent")),
		Image = new Uri(string.Concat(baseUrl, Model.String("image", "/assets/img/nxnw_300x300.jpg"))),
		WordCount = Convert.ToInt32(readingTime.Words),
	};
}

<script type="application/ld+json">@Html.Raw(posting.ToHtmlEscapedString())</script>

<div>
	<article class="h-entry">
		<header>
			<h1 class="p-name">@Html.Raw(Model.String("title"))</h1>
			<p class="meta">
				<span>Posted on <a class="u-url" href="@canonical"><time datetime="@date.ToString("yyyy-MM-ddTHH:mm%K")" class="dt-published">@date.ToString("dd/MM/yyyy")</time></a>.</span>
				<span>Estimated read time: @(readingTime.Minutes <= 1 ? "under a minute" : $"{readingTime.Minutes.ToString("#,#")} minutes") (@(readingTime.Words.ToString("#,#")) words)</span>
			</p>
		</header>
		<div class="e-content">
			@RenderBody()
		</div>
		<aside>
			<p class="tags"><span>Tags:</span> @getTags(Model)</p>
			<p class="meta"><span>Permalink:</span> <a class="u-url" href="@canonical">@canonical</a></p>
		</aside>
	</article>
</div>