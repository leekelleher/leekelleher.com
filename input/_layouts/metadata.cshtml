@{
	var baseUrl = "https://leekelleher.com";
	var name = "Lee Kelleher";
	var jobTitle = "Umbraco Consultant";
	var siteName = $"{name} - {jobTitle}";
	var title = Model.ContainsKey("title") ? Model.String("title") + " | " + siteName : siteName;
	var description = Model.String("Excerpt", $"The personal website of {name}; {jobTitle}");
	var keywords = Model.ContainsKey("tags") ? string.Join(",", Model.Get<string[]>("tags")).ToLower() : "leekelleher,kelleher,umbraco,asp.net,c#,csharp,xslt,mvc,mvp";
	var url = string.Concat(baseUrl, Model.String("canonical", "/"));
	var image = string.Concat(baseUrl, Model.String("image", "/assets/img/nxnw_300x300.jpg"));
	var externalCss = Model.ContainsKey("css") ? Model.Get<string[]>("css") : null;
}
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
@if ((bool)ExecutionContext.Settings[Keys.LinksUseHttps] == true)
{
	<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
}
	<title>@Html.Raw(title)</title>
	<meta name="description" content="@description">
	<meta name="keywords" content="@keywords">
	<meta name="generator" content="Wyam">
	<meta name="twitter:card" content="summary">
	<meta name="twitter:site" content="@("@leekelleher")">
	<meta name="twitter:url" property="og:url" content="@url">
	<meta name="twitter:title" property="og:title" content="@Model.String("title", siteName)">
	<meta name="twitter:description" property="og:description" content="@description">
	<meta name="twitter:image" property="og:image" content="@image">
	<link rel="alternate" href="@baseUrl/feed/" type="application/rss+xml">
	<link rel="canonical" href="@url">
	<link rel="pingback" href="https://webmention.io/leekelleher.com/xmlrpc">
	<link rel="webmention" href="https://webmention.io/leekelleher.com/webmention">
	<link rel="stylesheet" href="/assets/css/minimum.css">
@if(externalCss != null)
{
	foreach(var item in externalCss)
	{
	<link rel="stylesheet" href="@item">
	}
}